@model IEnumerable<First.Models.GuestResponse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListResponses</title>
</head>
<body>
    @if (Model.Count() == 0)
    {
        @: We are still looking for the attendees.

    }
    else
    {
        @: Our guest list is below
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var guest in Model)
            {
                <tr>
                    <td>@guest.Name</td>
                    <td>@guest.Email</td>
                    <td>@guest.Phone</td>

                </tr>
            }

            </tbody>
        </table>
    }
</body>
</html>
